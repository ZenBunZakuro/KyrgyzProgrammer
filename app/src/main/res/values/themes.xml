<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.Design.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="CustomTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_12sp</item>
    </style>

    <style name="AppTitleText">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/text_24sp</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/text_20sp</item>
    </style>

</resources>