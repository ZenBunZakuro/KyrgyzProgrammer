<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/cyan</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="snackbarStyle">@style/SnackbarStyle</item>
        <item name="snackbarTextViewStyle">@style/SnackbarTextStyle</item>
    </style>

    <style name="SplashTheme" parent="Theme.Design.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="CustomTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_12sp</item>
    </style>

    <style name="AppTitleText">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/view_8dp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/text_18sp</item>
    </style>

    <style name="AppText">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/view_8dp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>

    <style name="CollapsinToolbarTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/background</item>
    </style>

    <style name="SnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">@dimen/view_4dp</item>
        <item name="cornerRadius">@dimen/view_8dp</item>
        <item name="android:background">@drawable/rounded_corner_snackbar</item>
    </style>

    <style name="SnackbarTextStyle" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textSize">@dimen/text_12sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

</resources>